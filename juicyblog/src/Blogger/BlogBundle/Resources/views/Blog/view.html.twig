{# src/Blogger/BlogBundle/Resources/views/Blog/view.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}
{% block body %}
    <h1>{{ post.title }}</h1>
    <p>{{ post.blog|nl2br }}</p>
    <p><small>Created by {{ post.author }} at {{ post.timestamp|date('H:i d/m/y') }}
        </small>
        <a href="{{ path('edit',{'id':post.id}) }}">edit</a>
    </p>
{% endblock %}